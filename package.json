{
  "name": "chainlit-desktop-app",
  "version": "1.0.0",
  "description": "Desktop application for Chainlit-based chatbot",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"chainlit run obsidian_chatbot.py\" \"npm run wait-and-start-electron\"",
    "wait-and-start-electron": "wait-on http://localhost:8000 && electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.example.chainlitapp",
    "productName": "ChainlitDesktopApp",
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.3.0",
    "concurrently": "^7.6.0",
    "wait-on": "^7.0.1"
  }
}